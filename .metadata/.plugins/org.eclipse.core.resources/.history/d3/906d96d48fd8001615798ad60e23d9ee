public class deleteKth {
	public static int[] array = {0,2,4,6,1};
	public static LinkedList newList;
	public static int K = 2;
	
	public static void main(String[] args){
		Node current = new Node(0);
		Node nextNode;
		for(int i = 0; i < array.length; i++){
			if (newList == null){
				newList = new LinkedList(array[i]);
				current = newList.head;
			}
			else{
			nextNode = new Node(array[i]);
			newList.add(current, nextNode);
			current = current.next;
			}
		}
		newList.print();
		current = newList.head;
		for(int i = 0; i < K && current != null; i++){
			current = current.next;
		}
		/*
		current.setNext(current.getNext().getNext());
		current = newList.head;
		System.out.println(newList);
		newList.print();
		*/
	}
}

class LinkedList{
	Node head;
	
	public LinkedList(int value){
		head = new Node(value);
	}
	
	public void add(Node current, Node nextNode){
		current.setNext(nextNode);
	}
	
	public void print(){
		while (head.next != null){
			System.out.print(head.data);
			head = head.next;
		}
	}
}

class Node{
	Node next;
	int data;
	
	public Node(int value){
		next = null;
		data = value;
	}
	
	public Node getNext(){
		return next;
	}
	
	public void setNext(Node nextNode){
		next = nextNode;
	}
}


