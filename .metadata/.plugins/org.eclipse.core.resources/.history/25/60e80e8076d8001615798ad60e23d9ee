public class deleteKth {
	public static int[] array = {0,2,4,6,1};
	public static LinkedList newList = new LinkedList();
	public static int K = 2;
	
	public static void main(String[] args){
		Node current = newList.head;
		for(int i = 1; i < array.length; i++){
			int value = array[i];
			newList.add(current, value);
			current = current.next;
		}
		current = newList.head;
		for(int i = 0; i < K; i++){
			current = current.next;
		}
		
		current.next = current.getNext().getNext();
	}
}

class LinkedList{
	Node head;
	
	public LinkedList(){
		Node head = null;
	}
	
	public void add(Node current, int value){
		current.setNext(value);
	}
}

class Node{
	Node next;
	int data;
	
	public Node(int value){
		next = null;
		data = value;
	}
	
	public Node getNext(){
		return next;
	}
	
	public void setNext(int value){
		next.data = value;
	}
}


